library(mapsf)
# jeu de données d'exemple
m <- mf_get_mtq()

# Pour représenter la variable qualitative STATUS
# Nous utilisons directement la variable et ses modalités
# Il n'y a pas besoin de créer une colonne avec les couleurs
mf_map(x = m, var = "STATUS", type = "typo")

# si nous voulons associer une modalité particulière à une couleur
# il faut préciser explicitement les modalités et les couleurs associées
mf_map(
  x = m,
  var = "STATUS",
  type = "typo",
  val_order = c("Prefecture", "Sub-prefecture", "Simple municipality"),
  pal = c("red", "blue", "green")
)

# La boucle for est tout à fait approprié à votre problème
# on parcours les communes 5 premières communes
for(i in 1:10){
  mf_init(m[i,])
  mf_map(
    x = m,
    var = "STATUS",
    type = "typo",
    val_order = c("Prefecture", "Sub-prefecture", "Simple municipality"),
    pal = c("red", "blue", "green"), 
    add = TRUE
  )
  mf_title(m$LIBGEO[i])
}


# une seule commune à la fois avec la même symbologie que 
# dans l'exemple et ne pas afficher la légende
for(i in 1:10){
  mf_map(
    x = m[i, ],
    var = "STATUS",
    type = "typo",
    val_order = c("Prefecture", "Sub-prefecture", "Simple municipality"),
    pal = c("red", "blue", "green"), 
    add = FALSE,
    leg_pos = NA
  )
  mf_title(m$LIBGEO[i])
}

reprex::reprex(std_out_err = TRUE)

